DATABASE_DSN=postgresql+psycopg2://USER:PASSWORD@HOST:PORT/DATABASE
AUTH_PROVIDER=supabase
STORAGE_PROVIDER=supabase

# Supabase
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=replace-with-service-role-key
SUPABASE_BUCKET=scope-docs
SUPABASE_JWT_AUDIENCE=authenticated
ARTIFACT_URL_EXPIRY_SECONDS=3600

# Sessions / legacy auth fallback
SESSION_SECRET=replace-with-random-string
SESSION_COOKIE_NAME=scope_session
SESSION_COOKIE_SECURE=false
SESSION_COOKIE_MAX_AGE=2592000

# Optional integrations
PERPLEXITY_API_KEY=
PERPLEXITY_MODEL=sonar-pro
ENABLE_WEB_RESEARCH=true
WEB_SEARCH_MAX_USES=3
WEB_SEARCH_ALLOWED_DOMAINS=
ANTHROPIC_API_KEY=

# Historical embeddings (optional) - now uses main database
HISTORY_ENABLED=false
HISTORY_EMBEDDING_MODEL=text-embedding-3-small
HISTORY_TOPN=12

# Local storage fallback (used when STORAGE_PROVIDER=local)
SCOPE_DATA_ROOT=./data

# Google OAuth integration (optional, per-user Drive/Docs)
GOOGLE_OAUTH_CLIENT_ID=
GOOGLE_OAUTH_CLIENT_SECRET=
GOOGLE_OAUTH_REDIRECT_URI=

# Google Drive service account for template access (optional, for one-shot mode templates)
# Path to service account JSON key file (shared with template folder)
GOOGLE_SERVICE_ACCOUNT_FILE=
# Google Drive folder ID containing templates (default: provided folder)
GOOGLE_TEMPLATE_FOLDER_ID=1Lrh_qb2hnVtwrnfq7A-RqGKIYAo4cGYM